<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.selectCountry.SelectCountryActivity">
    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/orange_btn"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints"
        tools:targetApi="lollipop" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/gradiant_back">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/login_logo" />
            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_30"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/login"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_30" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_43"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/round_corner_8_border"
                android:gravity="center|start"
                android:orientation="horizontal">

                <!--            <androidx.appcompat.widget.AppCompatTextView-->
                <!--                android:id="@+id/tv_country_code"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:fontFamily="@font/montserrat_regular"-->
                <!--                android:textColor="@color/white"-->
                <!--                android:textSize="@dimen/sp_16"-->
                <!--                android:layout_height="wrap_content"/>-->

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/et_login_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_gravity="center|start"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:focusable="true"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="@string/email_address"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/round_corner_8_border"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:weightSum="1">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_pass"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_44"
                    android:layout_weight=".8"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:focusable="true"
                    android:layout_gravity="center|start"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center|start"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/sp_16" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_pass_visible"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_16"
                    android:layout_weight=".2"
                    android:src="@drawable/eye_open"
                    android:tint="@color/colorGrey" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_forgot_proceed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_30"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="end|center"
                android:text="@string/forgot_password"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_13" />
            <!--     <TextView
            android:id="@+id/tv_hyper_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="goole"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/light_green_text"
            android:textSize="@dimen/sp_13"/>-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/round_corner_28_background"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_login_as_guest"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/round_corner_28_orange_background"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="@string/login_as_guest"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_113"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_113"
                android:gravity="center"
                android:orientation="horizontal">
                <View
                    android:layout_width="48dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/bt_light_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/or_join_with"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/bt_light_gray"/>
                <View
                    android:layout_width="48dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/bt_light_gray"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:src="@drawable/or_seprator" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_30"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:id="@+id/tv_google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:gravity="center"
                    android:padding="@dimen/_12sdp"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/gog_ic" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tv_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/fb_ic" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_20"
                android:gravity="center"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/dont_have_an_account"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_12" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_5"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/signup"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>