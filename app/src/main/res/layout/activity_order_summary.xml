<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.OrderSummaryActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/appbar_select_payment_mode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@drawable/gradiant_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="@color/black"
            app:srcCompat="@drawable/back_icon">
        </androidx.appcompat.widget.AppCompatImageView>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/order_summary"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar_select_payment_mode"
        android:scrollbars="none">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/right_icon"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/circle_bg">

                <ImageView
                    android:id="@+id/ivOrderStatus"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/white_check_icon" />
            </RelativeLayout>

            <TextView
                android:id="@+id/order_placed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/right_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/order_placed"
                android:textColor="@color/color_text_9F9F9F" />

            <RelativeLayout
                android:id="@+id/order_id_Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_placed"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_20sdp">

                <TextView
                    android:id="@+id/order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/light_green_00973D"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/color_text_9F9F9F"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_below="@+id/order_id_Date"
                android:background="@color/color_text_9F9F9F" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/products_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_5sdp" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_track_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/products_recyclerview"
                android:layout_marginTop="1dp"
                android:padding="2dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_dispatched"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/circle_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/v_dispatched"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/v_dispatched"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/color_text_9F9F9F"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_dispatched"
                    app:layout_constraintEnd_toStartOf="@+id/iv_shipped"
                    app:layout_constraintStart_toEndOf="@+id/iv_dispatched"
                    app:layout_constraintTop_toTopOf="@+id/iv_dispatched" />

                <ImageView
                    android:id="@+id/iv_shipped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle_white"
                    app:layout_constraintBottom_toBottomOf="@+id/v_dispatched"
                    app:layout_constraintEnd_toStartOf="@+id/v_shipped"
                    app:layout_constraintStart_toEndOf="@+id/v_dispatched"
                    app:layout_constraintTop_toTopOf="@+id/v_dispatched" />


                <View
                    android:id="@+id/v_shipped"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/color_text_9F9F9F"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_shipped"
                    app:layout_constraintEnd_toStartOf="@+id/out_for_Delivery"
                    app:layout_constraintStart_toEndOf="@+id/iv_shipped"
                    app:layout_constraintTop_toTopOf="@+id/iv_shipped" />


                <ImageView
                    android:id="@+id/out_for_Delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle_white"
                    app:layout_constraintBottom_toBottomOf="@+id/v_shipped"
                    app:layout_constraintEnd_toStartOf="@+id/v_out_for_Delivery"
                    app:layout_constraintStart_toEndOf="@+id/v_shipped"
                    app:layout_constraintTop_toTopOf="@+id/v_shipped" />


                <View
                    android:id="@+id/v_out_for_Delivery"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/color_text_9F9F9F"
                    app:layout_constraintBottom_toBottomOf="@+id/out_for_Delivery"
                    app:layout_constraintEnd_toStartOf="@+id/iv_delivered_food"
                    app:layout_constraintStart_toEndOf="@+id/out_for_Delivery"
                    app:layout_constraintTop_toTopOf="@+id/out_for_Delivery" />


                <ImageView
                    android:id="@+id/iv_delivered_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/circle_white"
                    app:layout_constraintBottom_toBottomOf="@+id/v_out_for_Delivery"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/v_out_for_Delivery"
                    app:layout_constraintTop_toTopOf="@+id/v_out_for_Delivery" />


                <TextView
                    android:id="@+id/tv_confirmed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingStart="4dp"
                    android:paddingEnd="1dp"
                    android:text="@string/dispatched"
                    android:textColor="@color/light_green_00973D"
                    android:textSize="9sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toStartOf="@+id/v_dispatched"
                    app:layout_constraintStart_toStartOf="@id/iv_dispatched"
                    app:layout_constraintTop_toBottomOf="@+id/iv_dispatched" />


                <TextView
                    android:id="@+id/tv_shipped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingStart="@dimen/_25sdp"
                    android:paddingEnd="1dp"
                    android:text="@string/shipped"
                    android:textColor="@color/color_text_9F9F9F"
                    android:textSize="9sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toStartOf="@+id/iv_shipped"
                    app:layout_constraintStart_toStartOf="@+id/iv_shipped"
                    app:layout_constraintTop_toBottomOf="@+id/iv_shipped" />

                <TextView
                    android:id="@+id/tv_out_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="1dp"
                    android:text="@string/out_for_delivery"
                    android:textColor="@color/color_text_9F9F9F"
                    android:textSize="9sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toStartOf="@+id/out_for_Delivery"
                    app:layout_constraintStart_toStartOf="@+id/out_for_Delivery"
                    app:layout_constraintTop_toBottomOf="@+id/out_for_Delivery" />

                <TextView
                    android:id="@+id/tv_delivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="1dp"
                    android:text="@string/delivered"
                    android:textColor="@color/color_text_9F9F9F"
                    android:textSize="9sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toStartOf="@+id/iv_delivered_food"
                    app:layout_constraintStart_toStartOf="@+id/iv_delivered_food"
                    app:layout_constraintTop_toBottomOf="@+id/iv_delivered_food" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <RelativeLayout
                android:id="@+id/tracking_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/products_recyclerview"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:visibility="gone">


                <RelativeLayout
                    android:id="@+id/rlOrderdisaptched"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/dispatched_image"
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/circle_bg" />

                    <View
                        android:id="@+id/dispatched_line"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/dispatched_image"
                        android:background="@color/C1C1C1" />

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dispatched"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlOrderdisaptched"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:textColor="@color/light_green_00973D"
                    android:textSize="@dimen/_10sdp"
                    tools:text="Dispatched" />


                <RelativeLayout
                    android:id="@+id/rlOrdershipped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/rlOrderdisaptched">

                    <ImageView
                        android:id="@+id/shipped_image"
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/circle_white" />

                    <View
                        android:id="@+id/shipped_line"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/shipped_image"
                        android:background="@color/C1C1C1" />

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/shipped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlOrdershipped"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/rlOrderdisaptched"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:textColor="@color/C1C1C1"
                    android:textSize="@dimen/_10sdp"
                    tools:text="Shipped" />

                <RelativeLayout
                    android:id="@+id/rlOrderoutDelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/rlOrdershipped">

                    <ImageView
                        android:id="@+id/outfor_deliveery_image"
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/circle_white" />

                    <View
                        android:id="@+id/outfor_deliveery_line"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/outfor_deliveery_image"
                        android:background="@color/C1C1C1" />

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/outfordelivery"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlOrderoutDelivery"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toStartOf="@+id/rlOrderdelivered"
                    android:layout_toEndOf="@+id/rlOrdershipped"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:textColor="@color/C1C1C1"
                    android:textSize="@dimen/_10sdp"
                    tools:text="Out for delivery" />


                <RelativeLayout
                    android:id="@+id/rlOrderdelivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/rlOrderoutDelivery">

                    <ImageView
                        android:id="@+id/delivered_image"
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/circle_white" />

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/delivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlOrderdelivered"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/outfordelivery"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:textColor="@color/C1C1C1"
                    android:textSize="@dimen/_10sdp"
                    tools:text="Delivered" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/constraint_track_order"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/shiping_address"
                    android:textColor="@color/search_box_text_color"
                    android:textSize="@dimen/_10sdp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Rahul Sharma"
                        android:textColor="@color/color_text_1B6BCC"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/tv_address_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Home"
                        android:textColor="@color/color_text_6F6F6F"
                        android:textSize="@dimen/_7sdp"
                        android:visibility="gone" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Fluper - Mobile App Company\n+1 646-889-2430"
                    android:textColor="@color/color_text_3A3A3A"
                    android:textSize="@dimen/_11sdp"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/sub_address_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="C 142, Sector 63 Rd, C Block,\nSector 63, Noida,\nUttar Pradesh, 201301"
                    android:textColor="@color/color_text_9F9F9F"
                    android:textSize="@dimen/_9sdp" />
                <TextView
                    android:id="@+id/tv_address_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="C 142, Sector 63 Rd, C Block,\nSector 63, Noida,\nUttar Pradesh, 201301"
                    android:textColor="@color/color_text_9F9F9F"
                    android:textSize="@dimen/_9sdp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/color_divider_line" />

                <TextView
                    android:id="@+id/payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/summary"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/payable_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/payable_amount_inclusive_of_all_taxes"
                        android:textColor="@color/search_box_text_color"
                        android:textSize="@dimen/sp_12" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/net_payable_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="220 AED"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/delivery_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/cash_collection_charges"
                        android:textColor="@color/search_box_text_color"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/cod_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/aed_10"
                        android:textColor="@color/light_green_00973D"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/oridelivery_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/delivery_charge"
                        android:textColor="@color/search_box_text_color"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/delivery_charge_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="10 AED"
                        android:textColor="@color/light_green_00973D"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/shipping_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/shipping_charges"
                        android:textColor="@color/search_box_text_color"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/shipping_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/aed_10"
                        android:textColor="@color/light_green_00973D"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tax_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/tax"
                        android:textColor="@color/search_box_text_color"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tax_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="5%"
                        android:textColor="@color/light_green_00973D"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/color_divider_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/total_payable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/total_payable_amount"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/total_amount_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="330 AED"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_18" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/color_divider_line" />

                <LinearLayout
                    android:id="@+id/linearPay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:gravity="center"
                    android:visibility="visible"
                    android:weightSum="2">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/cancel_bg"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/cancel"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        android:visibility="gone" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btn_continue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/round_corner_28_background"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/continue_btn"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>