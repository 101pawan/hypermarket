<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="@dimen/dp_8"
    android:layout_marginBottom="@dimen/_10sdp"
    android:gravity="center_horizontal"
    app:cardCornerRadius="5dp">


    <LinearLayout
        android:id="@+id/ll_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_121sdp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ln_deals"

            android:layout_width="@dimen/_105sdp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--      <androidx.appcompat.widget.AppCompatImageView
                          android:id="@+id/deals_image"
                          android:layout_width="@dimen/dp_158"
                          android:layout_height="@dimen/dp_125"
                          android:layout_gravity="center"
                          android:src="@drawable/camera" />-->

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/deals_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/store_one"
                    app:riv_border_color="#00000000"
                    app:riv_border_width="0dip"
                    app:riv_corner_radius="@dimen/_5sdp"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />

                <FrameLayout
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_65">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/strips_image"
                        android:layout_width="@dimen/dp_65"
                        android:layout_height="@dimen/dp_65"
                        android:src="@drawable/offer_strip" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_discounts"
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_15"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/dp_12"
                        android:fontFamily="@font/montserrat_semibold"
                        android:rotation="-45"
                        android:text="@string/offer"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12" />


                </FrameLayout>

            </FrameLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Van Heusen Men Purple Solid Polo Collar T-Shirt"
                android:textColor="@color/color_text_3A3A3A"
                android:textSize="@dimen/_11sdp"
                tools:ignore="SmallSp" />


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tv_selling_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="7.7 AED"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/tv_main_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="7.7 AED"
                    android:textColor="@color/dark_red"
                    android:textSize="@dimen/_11sdp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Deal Name"
                    android:textColor="@color/search_box_text_color"
                    android:textSize="@dimen/_8sdp"
                    android:layout_weight="2"/>

                <TextView
                    android:id="@+id/tv_deal_name"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Summer Deal"
                    android:textAllCaps="true"
                    android:textColor="@color/orange_btn"
                    android:textSize="@dimen/_9sdp"
                    android:gravity="end" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Starting Date"
                    android:layout_weight="2"
                    android:textColor="@color/search_box_text_color"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/tv_starting_date"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:textAlignment="textEnd"
                    android:text="Summer Deal"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:textColor="@color/color_1DC3F7"
                    android:textSize="@dimen/_9sdp"
                    android:gravity="end" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/deal_remaining_time"
                    android:layout_weight="1"
                    android:textColor="@color/search_box_text_color"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/tv_remaining_time"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textAlignment="textEnd"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Summer Deal"
                    android:textAllCaps="true"
                    android:layout_weight="2"
                    android:textColor="@color/color_text_E50019"
                    android:textSize="@dimen/_9sdp"
                    android:gravity="end" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView><!--
