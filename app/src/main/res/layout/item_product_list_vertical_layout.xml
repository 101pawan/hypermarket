<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@color/white"
    android:elevation="@dimen/dp_8"
    android:gravity="center_horizontal"
    app:cardCornerRadius="@dimen/_5sdp"
    tools:targetApi="lollipop">


    <LinearLayout
        android:id="@+id/rl_parent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">



        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_100sdp"
            android:id="@+id/iv_product_image"
            android:src="@drawable/store_one"
            android:scaleType="fitXY"
            app:riv_corner_radius="@dimen/_5sdp"
            app:riv_border_width="0dip"
            app:riv_border_color="#00000000"
            app:riv_mutate_background="true"
            app:riv_oval="false" />

<!--        <ImageView-->
<!--            android:id="@+id/iv_product_image"-->
<!--            android:layout_width="@dimen/_80sdp"-->
<!--            android:layout_height="@dimen/_110sdp"-->
<!--            android:adjustViewBounds="true"-->
<!--            android:scaleType="fitXY"-->
<!--            android:src="@drawable/store_one" />-->

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Van Heusen Men Purple Solid Polo Collar T-Shirt"
                android:textColor="@color/color_text_3A3A3A"
                android:textSize="@dimen/_11sdp"
                tools:ignore="SmallSp" />


            <RelativeLayout
                android:id="@+id/rl_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_product_name">

                <RatingBar
                    android:id="@+id/simpleRatingBar"
                    style="@style/MyRatingBar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:numStars="5"
                    android:rating="2" />

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/simpleRatingBar"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="4.6"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/tv_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="InStock"
                    android:textColor="@color/text_green"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintStart_toEndOf="@+id/tv_rating" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_price_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_selling_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="7.7 AED"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_main_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="7.7 AED"
                    android:textColor="@color/discount_color"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_add_to_wish_list"
                    android:layout_toStartOf="@+id/tv_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawableStart="@drawable/ic_heart_un_fill_black"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/add_to_wishlist"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/category_text_color"
                    tools:ignore="HardcodedText"
                    tools:targetApi="m" />

                <TextView
                    android:id="@+id/tv_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawableStart="@drawable/ic_cart_grey"
                    android:drawablePadding="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/add_to_cart"
                    android:textColor="@color/category_text_color"
                    android:textSize="@dimen/_10sdp"
                    tools:ignore="HardcodedText"
                    android:visibility="gone"
                    tools:targetApi="m" />


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>