            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/seprator_color"/>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/dp_20"
                          android:background="@color/white"
                          android:visibility="gone"
                          android:orientation="vertical">

                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/dp_20"
                              android:layout_marginLeft="@dimen/dp_12"
                              android:layout_marginTop="@dimen/dp_20"
                              android:layout_marginRight="@dimen/dp_12"
                              android:orientation="horizontal"
                              android:weightSum="1">

                              <androidx.appcompat.widget.AppCompatTextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_weight=".6"
                                  android:fontFamily="@font/montserrat_bold"
                                  android:text="@string/deals"
                                  android:textColor="@color/black"
                                  android:textSize="@dimen/sp_15" />

                              <androidx.appcompat.widget.AppCompatTextView
                                  android:id="@+id/tv_deals_all"
                                  android:layout_width="@dimen/dp_0"
                                  android:layout_height="wrap_content"
                                  android:layout_gravity="end|center"
                                  android:layout_weight=".4"
                                  android:fontFamily="@font/montserrat_medium"
                                  android:gravity="end"
                                  android:text="@string/view_all"
                                  android:textColor="@color/search_box_text_color"
                                  android:textSize="@dimen/sp_12" />
                          </LinearLayout>

                          <androidx.recyclerview.widget.RecyclerView
                              android:id="@+id/rv_deals"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                              app:spanCount="2"
                              android:padding="@dimen/_10sdp"
                              tools:listitem="@layout/deals_layout"
                              android:paddingBottom="@dimen/_20sdp">

                          </androidx.recyclerview.widget.RecyclerView>
                      </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/seprator_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_15"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/category"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/_tv_category_view_all"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_weight=".4"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="end"
                    android:text="@string/view_all"
                    android:textColor="@color/search_box_text_color"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_sub_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:visibility="gone"
                android:orientation="horizontal"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:visibility="gone"
                android:background="@color/seprator_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_15"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/category"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/_tv_category_view_all1"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_weight=".4"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="end"
                    android:text="@string/view_all"
                    android:textColor="@color/search_box_text_color"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_sub_categories2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:visibility="gone"
                android:orientation="horizontal"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>