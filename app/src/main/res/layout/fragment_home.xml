<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/ln_nested"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <LinearLayout
            android:id="@+id/ln_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_80"
            android:background="@color/color_00000029"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradiant_back"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_photo"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/profile_dummy_img" />
                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/edt_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_toStartOf="@id/iv_country_flag"
                    android:layout_toEndOf="@+id/iv_profile_photo"
                    android:background="@drawable/round_corner_8_background"
                    android:drawableStart="@drawable/header_search"
                    android:drawablePadding="@dimen/dp_8"
                    android:drawableTint="@color/search_box_text_color"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="@string/search_for_product"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/_15sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/sp_14" />
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_search"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_toStartOf="@id/iv_country_flag"
                    android:layout_toEndOf="@+id/iv_profile_photo"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:background="@drawable/custom_spinner_background_one"
                    android:overlapAnchor="false" />
                <ImageView
                    android:id="@+id/iv_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:tint="@color/black"
                    android:src="@drawable/notification_icon" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_country_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_toStartOf="@+id/iv_notification"
                    app:srcCompat="@drawable/ic_oman" />

            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                android:background="@color/color_00000029">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/_50sdp"
                    android:layout_marginEnd="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:background="@color/color_00000029"
                    >

                    <TextView
                        android:id="@+id/tv_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:visibility="gone"
                        android:fontFamily="@font/montserrat_regular"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_serach"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:scrollbars="none"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/home_search_layout_item"
                        android:background="@color/color_00000029"
                        android:layout_marginTop="8dp">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:background="@drawable/loc_gradiant_back">

                <ImageView
                    android:id="@+id/place_ic"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:src="@drawable/outline_place_black_24" />

                <TextView
                    android:id="@+id/tv_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/place_ic"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />

                <!--                <ImageView-->
                <!--                    android:id="@+id/iv_select_store"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_alignParentRight="true"-->
                <!--                    android:layout_centerVertical="true"-->
                <!--                    android:padding="@dimen/_10sdp"-->
                <!--                    android:tint="@color/white"-->
                <!--                    android:src="@drawable/droparrow_icon" />-->
            </RelativeLayout>


            <!--                            <ss.com.bannerslider.Slider-->
            <!--                                android:id="@+id/banner_slider1"-->
            <!--                                android:layout_width="match_parent"-->
            <!--                                android:layout_height="@dimen/dp_256" />-->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_256">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/banner_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_256"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_banner" />


            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/seprator_color"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_15"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/trending_products"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_trending_all"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_weight=".4"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="end"
                    android:text="@string/view_all"
                    android:textColor="@color/search_box_text_color"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_trending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_random_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


