<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:targetApi="lollipop">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_product_photo"
                android:layout_width="@dimen/_78sdp"
                android:layout_height="@dimen/_85sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:scaleType="fitXY"
                android:src="@drawable/store_one"
                app:riv_border_color="#00000000"
                app:riv_border_width="0dip"
                app:riv_corner_radius="@dimen/_5sdp"
                app:riv_mutate_background="true"
                app:riv_oval="false" />
            <!--
                        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="@dimen/_5sdp"
                            card_view:cardPreventCornerOverlap="false">

                            <ImageView
                                android:id="@+id/iv_product_photo"
                                android:layout_width="@dimen/_78sdp"
                                android:layout_height="@dimen/_85sdp"
                                android:layout_gravity="left|center_vertical"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/store_one"
                                tools:ignore="RtlHardcoded" />
                        </androidx.cardview.widget.CardView>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Tufkote Flood Beam Auxiliary LED Lamp for Cars and Bikes (27W)"
                    android:textColor="@color/color_text_3A3A3A"
                    android:textSize="@dimen/_10sdp"
                    tools:ignore="HardcodedText,SmallSp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/_5sdp"
                        android:visibility="gone"
                        android:paddingRight="@dimen/_5sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/size"
                            android:textColor="@color/color_text_2F2F30"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:id="@+id/tv_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="M"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_13sdp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="horizontal"
                        tools:ignore="UnknownIdInLayout">
                        <!-- <ImageView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:paddingRight="5dp"
                             android:src="@drawable/stor_rat_star_fill"
                             android:tint="@color/colorGrey" />-->
                        <RatingBar
                            android:id="@+id/simpleRatingBar"
                            style="@style/MyRatingBar1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:numStars="5"
                            android:rating="2"/>
                        <TextView
                            android:id="@+id/tv_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="4.6"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/_8sdp"
                            app:layout_constraintStart_toEndOf="@+id/ll_rating" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_selling_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="419 AED"
                        android:textColor="@color/colorAccent" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qty"
                            android:textColor="@color/color_text_2F2F30"
                            android:textSize="@dimen/_13sdp" />
                        <TextView
                            android:id="@+id/tv_quantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="1"
                            android:layout_marginEnd="4dp"
                            android:layout_marginStart="4dp"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_13sdp" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/expected_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tv_expected_delivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_toStartOf="@+id/date"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/expected_delivery_on"
                        android:textColor="@color/search_box_text_color"
                        android:textSize="@dimen/_10sdp"/>
                    <LinearLayout
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">
                        <TextView
                            android:id="@+id/tv_delivery_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:text=""
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"
        android:background="@color/color_divider_line" />
</LinearLayout>