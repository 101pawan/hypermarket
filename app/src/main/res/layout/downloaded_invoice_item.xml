<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_6sdp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_hash_number_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/montserrat_medium"
            android:text="#124541"
            android:textColor="@color/light_green_00973D"
          />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_date_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/montserrat_medium"
            android:text="15 Jul 2020, 10:00 AM"
            android:textColor="@color/color_text_9F9F9F"
          />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey_E5E5E5"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_download_invoice"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="start|center_vertical"
            android:layout_margin="@dimen/_10sdp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/store_one" />
        <TextView
            android:id="@+id/tv_invoice_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_toEndOf="@+id/iv_download_invoice"
            android:fontFamily="@font/montserrat_medium"
            android:text="Tufkote Flood Beam Auxiliary LED Lamp for Cars and Bikes (27W)"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            tools:ignore="SmallSp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@color/grey_E5E5E5"
        />

    <TextView
        android:id="@+id/tv_view_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/view_invoice"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/color_red"
        android:textSize="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        tools:ignore="SmallSp" />

</LinearLayout>