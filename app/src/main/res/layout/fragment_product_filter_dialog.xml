<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_5sdp"
    android:gravity="center_horizontal"
    android:background="#00000033"
    tools:ignore="PrivateResource">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp"
        android:background="@drawable/card_view_bg"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sort By"
            android:fontFamily="@font/montserrat_semibold"
            android:drawableEnd="@drawable/popup_cross_icon"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Type"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:drawableRight="@drawable/ic_icn_tick"
            android:textColor="@color/text_green"
            android:textSize="@dimen/_13sdp"
            tools:ignore="HardcodedText,RtlHardcoded" />


        <TextView
            android:id="@+id/tv_price_high_low"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/price_high_to_low"
            android:fontFamily="@font/montserrat_medium"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/search_box_text_color"
            android:textSize="@dimen/_14sdp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_price_low_high"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/price_low_to_high"
            android:fontFamily="@font/montserrat_medium"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/search_box_text_color"
            android:textSize="@dimen/_14sdp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_popularity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/popularity"
            android:fontFamily="@font/montserrat_medium"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/search_box_text_color"
            android:textSize="@dimen/_14sdp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_latest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/latest"
            android:fontFamily="@font/montserrat_medium"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/search_box_text_color"
            android:textSize="@dimen/_14sdp"
            tools:ignore="HardcodedText" />


    </LinearLayout>


</LinearLayout>