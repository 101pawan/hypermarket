                    <RatingBar
                        android:id="@+id/simpleRatingBar"
                        style="@style/MyRatingBar1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:numStars="5"
                        android:rating="2" />

                    <TextView
                        android:id="@+id/tv_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="4.6"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_8sdp"
                        app:layout_constraintStart_toEndOf="@+id/ll_rating" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/tv_selling_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textAlignment="viewStart"
                        android:layout_toStartOf="@+id/ll_plus_minus"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="7.7 AED"
                        android:textColor="@color/black" />


                    <LinearLayout
                        android:id="@+id/ll_plus_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/border_cart_plus_minus"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">


                        <ImageView
                            android:id="@+id/iv_minus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            app:srcCompat="@drawable/ic_minus" />


                        <TextView
                            android:id="@+id/tv_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:text="5"
                            android:textColor="@color/color_text_3A3A3A"
                            android:textSize="@dimen/_13sdp" />

                        <ImageView
                            android:id="@+id/iv_plus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
