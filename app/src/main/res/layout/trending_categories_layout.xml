<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_101sdp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:background="@color/white"
    android:elevation="@dimen/dp_8"
    android:gravity="center_horizontal"
    app:cardCornerRadius="5dp"
    android:layout_marginStart="@dimen/dp_10">

    <LinearLayout
        android:id="@+id/ll_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/trending_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_97sdp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Killer 38-Litre..."
            android:layout_margin="@dimen/_5sdp"
            android:fontFamily="@font/montserrat_regular"
            android:maxWidth="@dimen/dp_80"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/category_text_color"
            android:textSize="11sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/tv_trending_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#535353"
            android:textSize="@dimen/sp_10"
            />


    </LinearLayout>

</androidx.cardview.widget.CardView>