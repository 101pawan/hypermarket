<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:orientation="horizontal"
            android:theme="@style/ToolbarStyle"
            android:background="@drawable/gradiant_back"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >

            <ImageView
                android:id="@+id/iv_actionbar_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:paddingEnd="@dimen/dimen_16dp"
                app:srcCompat="@drawable/back_icon"
                android:tint="@color/black"
                tools:ignore="ContentDescription,RtlSymmetry" />

            <TextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat_regular"
                android:padding="@dimen/_5sdp"
                android:text="@string/send_messages"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_18sp"
                tools:ignore="HardcodedText" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="20dp"
        android:paddingTop="25dp"
        android:paddingRight="20dp"
        >


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_full_name_send_msg"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/color_text_B2B2B2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/country_background_grey"
            android:fontFamily="@font/montserrat_regular"
            android:hint="@string/full_name"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:textSize="14dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />






        <LinearLayout


            android:id="@+id/ll_country_code_send_message"
            android:background="@drawable/country_background_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_full_name_send_msg"

            android:orientation="horizontal"


            >

            <com.hbb20.CountryCodePicker
                android:gravity="center_vertical"
                android:id="@+id/ccd_send_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                app:ccpDialog_backgroundColor="@color/white"
                app:ccpDialog_textColor="@color/color_text_B2B2B2"
                app:ccp_arrowColor="@color/color_text_B2B2B2"
                app:ccp_autoDetectCountry="true"


                app:ccp_textSize="14dp"
                app:ccp_contentColor="@color/color_text_B2B2B2"
                app:ccp_showArrow="true"
                app:ccp_showFlag="false"
                app:ccp_showFullName="false"
                app:ccp_showNameCode="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/color_text_B2B2B2"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_mobile_number_send_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"

                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@null"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/mobile_number"
                android:textSize="14dp"
                android:inputType="number"
                android:singleLine="true"

                android:textColor="@color/color_text_B2B2B2"
                android:textColorHint="@color/color_text_B2B2B2" />

        </LinearLayout>





        <!--<androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_mobile_no_send_msg"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"

            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/country_background_grey"
            android:fontFamily="@font/montserrat_regular"
            android:hint="@string/mobile_number"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_full_name_send_msg" />
        -->



        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_email_id_send_msg"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/color_text_B2B2B2"

            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/country_background_grey"
            android:fontFamily="@font/montserrat_regular"
            android:hint="@string/email_id"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_country_code_send_message" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_msg_is_about"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/color_text_B2B2B2"

            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/country_background_grey"
            android:fontFamily="@font/montserrat_regular"
            android:hint="@string/msg_is_about"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_email_id_send_msg" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_write_msg"
            android:layout_width="match_parent"
            android:textColor="@color/color_text_B2B2B2"
            android:layout_height="101dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/country_background_grey"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="start"
            android:hint="@string/write_msg"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:maxLines="5"
            android:singleLine="false"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_msg_is_about" />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_send_message"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/round_corner_28_background"
            android:paddingLeft="55dp"
            android:paddingTop="13dp"
            android:paddingRight="55dp"
            android:paddingBottom="13dp"
            android:text="@string/send_messages"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_write_msg">


        </androidx.appcompat.widget.AppCompatTextView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>