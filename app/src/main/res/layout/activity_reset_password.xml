<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.verification.VerificationActivity">

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/orange_btn"
        android:visibility="gone"
        tools:ignore="MissingConstraints"
        tools:targetApi="lollipop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_21"
            android:layout_marginTop="@dimen/dp_24"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_back_forgot"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_17"
                android:layout_marginStart="@dimen/dp_16"
                android:tint="@color/black"
                android:src="@drawable/back_icon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/reset_pass"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_40"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/enter_new_password"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center|start"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/round_corner_8_border"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:weightSum="1">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_resetnew_pass"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_44"
                android:layout_weight=".8"
                android:background="@null"
                android:cursorVisible="true"
                android:focusable="true"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center|start"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_16" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_newpass_visible"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_16"
                android:layout_weight=".2"
                android:tint="@color/colorGrey"
                android:src="@drawable/eye_open" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center|start"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/round_corner_8_border"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:weightSum="1">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_re_enter_pass"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_44"
                android:layout_weight=".8"
                android:background="@null"
                android:cursorVisible="true"
                android:focusable="true"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center|start"
                android:hint="@string/re_enter_new_password"
                android:inputType="textPassword"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_16" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_re_enter_pass_visible"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_16"
                android:layout_weight=".2"
                android:tint="@color/colorGrey"
                android:src="@drawable/eye_open" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_47"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/round_corner_28_background"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>


</RelativeLayout>