<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_24"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/profile_creation"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_29"
                android:layout_marginEnd="@dimen/dp_30"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/personal_detail"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile_img"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_75"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_26"
                android:background="@drawable/pesnldtl_cameraicon" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_profile_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/round_corner_8_border"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center|start"
                android:hint="@string/name"
                android:inputType="textCapWords"
                android:maxLength="35"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_16" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_profile_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/round_corner_8_border"
                android:editable="false"
                android:focusable="false"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center|start"
                android:hint="@string/email"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/round_corner_8_border"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_country_code_profile_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_profile_mobNo"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_44"
                    android:layout_gravity="center|start"
                    android:background="@null"
                    android:editable="false"
                    android:focusable="false"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center|start"
                    android:hint="@string/mobile_number"
                    android:inputType="number"
                    android:paddingStart="@dimen/dp_2"
                    android:paddingEnd="2dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_20"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/billing_shipping_address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/dp_2"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/optional"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_shiping_profileName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/round_corner_8_border"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center|start"
                android:hint="@string/name"
                android:inputType="textCapWords|textPersonName"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/round_corner_8_border"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_country_code_shipping_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_shiping_profile_mobNo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_gravity="center|start"
                    android:background="@null"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center|start"
                    android:hint="@string/mobile_number"
                    android:inputType="number"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/round_corner_8_border"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:weightSum="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_country_code_shiping_alter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_profile_alternatemobNo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_gravity="center|start"
                    android:background="@null"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center|start"
                    android:hint="@string/alternate_mobile_number"
                    android:inputType="number"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/round_corner_8_border"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner_country3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_34"
                    android:layout_gravity="center|start"
                    android:layout_weight=".9"
                    android:backgroundTint="@color/colorGrey"
                    android:drawableEnd="@drawable/dropdown_arrow"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center|start"
                    android:hint="@string/select_country"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_10"
                    android:popupBackground="@color/colorPrimary"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/sp_16" />

                <!--<androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/droparrow_icon" />-->


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/round_corner_8_border"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner_city"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_34"
                    android:layout_gravity="center|start"
                    android:layout_weight=".9"
                    android:backgroundTint="@color/colorGrey"
                    android:drawableEnd="@drawable/dropdown_arrow"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center|start"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_10"
                    android:popupBackground="@color/colorPrimary"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/sp_16" />

                <!--<androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/droparrow_icon" />-->

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_profile_buildingName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/round_corner_8_border"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center|start"
                android:hint="@string/building_name"
                android:inputType="textCapWords|textMultiLine"
                android:maxLines="5"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_16"
                tools:ignore="RtlCompat" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_profile_street"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/round_corner_8_border"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center|start"
                android:hint="@string/street_locality"
                android:inputType="textCapWords"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_16" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_profile_nearbylocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/round_corner_8_border"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center|start"
                android:hint="@string/near_by_location"
                android:inputType="textCapWords|textMultiLine"
                android:maxLines="5"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_16"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_profile_zip_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/round_corner_8_border"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center|start"
                android:hint="@string/zip_code"
                android:inputType="textCapWords"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_16"
                android:visibility="gone" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_save_proceed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_51"
                android:background="@drawable/round_corner_28_background"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="@string/save_proceed"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>