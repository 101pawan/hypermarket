<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="@dimen/dp_8"
    android:gravity="center_horizontal"
    app:cardCornerRadius="5dp"
    tools:targetApi="lollipop">


    <RelativeLayout
        android:id="@+id/rl_parent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_124sdp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/store_one" />


        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_product_image"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:fontFamily="@font/montserrat_medium"
            android:maxLines="2"
            android:text="Killer 38-Litre..."
            android:textAlignment="center"
            android:textColor="@color/color_text_3A3A3A"
            android:textSize="@dimen/_9sdp"
            tools:ignore="SmallSp" />


        <RelativeLayout
            android:id="@+id/rl_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_name"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_name">

            <RatingBar
                android:id="@+id/simpleRatingBar"
                style="@style/MyRatingBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:numStars="5"
                android:rating="2" />

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@+id/simpleRatingBar"
                android:fontFamily="@font/montserrat_medium"
                android:text="4.6"
                android:textColor="@color/orange_btn"
                android:textSize="@dimen/_8sdp" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_price_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_rating"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_5sdp">

            <TextView
                android:id="@+id/tv_selling_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="7.7 AED"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tv_main_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="7.7 AED"
                android:textColor="@color/discount_color"
                android:textSize="@dimen/_10sdp" />

        </RelativeLayout>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_price_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/color_divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_medium"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/add_to_cart"
                android:textSize="@dimen/_10sdp"
                android:textAlignment="center"
                android:textColor="@color/category_text_color"
                tools:ignore="HardcodedText"
                tools:targetApi="m" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_divider_line"/>

            <TextView
                android:id="@+id/tv_remove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_medium"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/remove"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/green_text"
                tools:targetApi="m"
                tools:ignore="HardcodedText" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_10sdp"
            app:srcCompat="@drawable/ic_heart_fill"
            tools:targetApi="m" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>