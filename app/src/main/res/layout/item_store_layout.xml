<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_5"
    android:background="@color/white"
    android:elevation="@dimen/dp_8"
    android:gravity="center_horizontal"
    app:cardCornerRadius="5dp"
    tools:targetApi="lollipop">




    <RelativeLayout
        android:id="@+id/rl_parent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">






        <ImageView
            android:id="@+id/iv_store_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/store_one"/>


        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="@dimen/_5sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:singleLine="true"
            android:text="Killer 38-Litre..."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="SmallSp"
            android:layout_below="@+id/iv_store_image"/>

        <TextView
            android:id="@+id/tv_store_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:drawableLeft="@drawable/storeloct_icon"
            android:drawablePadding="5dp"
            android:fontFamily="@font/montserrat_regular"
            android:singleLine="true"
            android:text="Killer 38-Litre..."
            android:textAlignment="center"
            android:textColor="@color/category_text_color"
            android:textSize="11sp"
            tools:ignore="SmallSp"
            android:layout_below="@+id/tv_store_name"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_below="@+id/tv_store_address">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorGrey"
                android:paddingRight="5dp"
                android:src="@drawable/stor_rat_star_fill"/>
            <RatingBar
                android:id="@+id/simpleRatingBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rating="2"
                android:numStars="5"
                android:layout_gravity="left"
                style="@style/MyRatingBar"/>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_selected_view"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/_140sdp">


            <View
                android:background="@color/colorLightGreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/iv_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_popup_green_check" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_storeinfo_icon"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>