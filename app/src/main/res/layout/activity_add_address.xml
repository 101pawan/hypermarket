<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.AddUpdateAddressActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:orientation="horizontal"
            android:theme="@style/ToolbarStyle"
            android:background="@drawable/gradiant_back"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageView
                android:id="@+id/iv_actionbar_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:paddingRight="@dimen/dimen_16dp"
                app:srcCompat="@drawable/back_icon"
                android:tint="@color/black"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat_regular"
                android:padding="@dimen/_5sdp"
                android:text="@string/add_address"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_18sp"
                tools:ignore="HardcodedText" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/app_bar"
        app:layout_constraintVertical_weight="1">


        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            >

            <EditText
                android:id="@+id/et_name_add_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/name"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingTop="@dimen/_16sdp"
                android:paddingBottom="@dimen/_16sdp"
                android:textColor="@color/color_text_B2B2B2"
                android:textSize="@dimen/_11sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider_line" />

            <EditText
                android:id="@+id/et_house_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/house_numbers"
                android:maxLines="2"
                android:paddingTop="@dimen/_16sdp"
                android:paddingBottom="@dimen/_16sdp"
                android:textColor="@color/color_text_B2B2B2"
                android:textSize="@dimen/_11sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider_line" />

            <EditText
                android:id="@+id/et_building"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/building_tower"
                android:maxLines="4"
                android:paddingTop="@dimen/_16sdp"
                android:paddingBottom="@dimen/_16sdp"
                android:textColor="@color/color_text_B2B2B2"
                android:textSize="@dimen/_11sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider_line" />

            <EditText
                android:id="@+id/et_society"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/society_locality"
                android:maxLines="4"
                android:paddingTop="@dimen/_16sdp"
                android:paddingBottom="@dimen/_16sdp"
                android:textColor="@color/color_text_B2B2B2"
                android:textSize="@dimen/_11sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider_line" />


            <LinearLayout
                android:id="@+id/ll_country_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_8sdp"
               android:layout_marginBottom="@dimen/_8sdp"
                android:orientation="horizontal">
                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccd_add_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    app:ccpDialog_backgroundColor="@color/white"
                    app:ccpDialog_textColor="@color/color_text_B2B2B2"
                    app:ccp_arrowColor="@color/color_text_B2B2B2"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_textSize="@dimen/_11sdp"
                    app:ccp_contentColor="@color/color_text_B2B2B2"
                    app:ccp_showArrow="true"
                    app:ccp_showFlag="false"
                    android:clickable="false"
                    android:layout_marginTop="1.5dp"
                    app:ccp_showFullName="false"
                    app:ccp_showNameCode="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_text_B2B2B2"
                    android:visibility="visible" />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_alt_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="@string/alternate_mobile_number"
                    android:textSize="@dimen/_11sdp"
                    android:inputType="number"
                    android:padding="@dimen/_8sdp"
                    android:singleLine="true"
                    android:textColor="@color/color_text_B2B2B2"
                    android:textColorHint="@color/color_text_B2B2B2" />

            </LinearLayout>



            <!--<EditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Alternate Mobile Number"
                android:inputType="number"
                android:maxLines="4"
                android:paddingTop="@dimen/_16sdp"
                android:paddingBottom="@dimen/_16sdp"
                android:textColor="@color/color_text_B2B2B2"
                android:textSize="@dimen/_11sdp" />
-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider_line" />

            <EditText
                android:id="@+id/et_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:visibility="gone"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Pincode"
                android:inputType="number"
                android:maxLines="4"
                android:paddingTop="@dimen/_16sdp"
                android:paddingBottom="@dimen/_16sdp"
                android:textColor="@color/color_text_B2B2B2"
                android:textSize="@dimen/_11sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/color_divider_line" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_district"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content"
                android:background="@null" />


            <!--<TextView
                android:id="@+id/tv_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="City"
                android:drawableRight="@drawable/droparrow_icon"
                android:paddingTop="@dimen/_16sdp"
                android:paddingBottom="@dimen/_16sdp"
                android:maxLines="4"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/color_text_B2B2B2"/>
        -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:id="@+id/ivCity"
                android:background="@color/color_divider_line" />


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_city"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:background="@null" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:maxLines="4"
                android:text="@string/save_as"
                android:layout_marginTop="16dp"
                android:textColor="@color/color_text_B2B2B2"
                android:textSize="@dimen/_11sdp" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/grpAddress"
                android:paddingTop="@dimen/_16sdp"
                android:paddingBottom="@dimen/_16sdp">
                <RadioButton
                    android:id="@+id/rb_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home"
                    android:checked="true"
                    android:textColor="@color/color_text_B2B2B2" />
                <RadioButton
                    android:id="@+id/rb_office"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/office"
                    android:textColor="@color/color_text_B2B2B2" />
                <RadioButton
                    android:id="@+id/rb_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/other"
                    android:textColor="@color/color_text_B2B2B2" />
            </RadioGroup>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_save_address"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_corner_28_background"
                android:paddingLeft="55dp"
                android:paddingTop="13dp"
                android:paddingRight="55dp"
                android:paddingBottom="13dp"
                android:text="@string/save_address"
                android:textColor="@color/white"
                android:textSize="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

