<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.selectLanguage.ChoseLanguageActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/gradiant_back"
            android:orientation="horizontal"
            android:padding="@dimen/_6sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_17"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_16"
                android:src="@drawable/back_icon"
                android:tint="@color/black"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_12"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/chose_language"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/chose_language"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <RadioGroup
            android:id="@+id/rgLanguageType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="2">

            <RadioButton
                android:id="@+id/rbenglish_lng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/custom_radio_btn"
                android:checked="false"
                android:fontFamily="@font/montserrat_regular"
                android:padding="@dimen/_6sdp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:text="@string/english"
                android:textColor="@drawable/selected_radio_text_color"
                android:textSize="@dimen/sp_12" />

            <RadioButton
                android:id="@+id/rbarabic_lng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_weight="1"
                android:button="@drawable/custom_radio_btn"
                android:fontFamily="@font/montserrat_regular"
                android:padding="@dimen/_6sdp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:text="@string/arabic"
                android:textColor="@drawable/selected_radio_text_color"
                android:textSize="@dimen/sp_12" />
        </RadioGroup>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_change_language"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_38"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/round_corner_28_background"
            android:backgroundTint="@color/orange_btn"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:text="@string/set_default_language"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorGrey"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints"
        tools:targetApi="lollipop" />
</RelativeLayout>