        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center|start"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:weightSum="1"
            android:background="@drawable/round_corner_8_border">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_regtr_pass"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_44"
                android:gravity="center|start"
                android:layout_weight=".8"
                android:cursorVisible="true"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:singleLine="true"
                android:fontFamily="@font/montserrat_regular"
                android:background="@null"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="@string/password"
                android:focusable="true"
                android:textCursorDrawable="@null"
                android:inputType="textPassword"
                android:textSize="@dimen/sp_16"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_regtrpass_visible"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_16"
                android:tint="@color/colorGrey"
                android:src="@drawable/eye_open"
                android:layout_weight=".2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center|start"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:weightSum="1"
            android:background="@drawable/round_corner_8_border">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_regtr_confrmpass"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_44"
                android:gravity="center|start"
                android:layout_weight=".8"
                android:cursorVisible="true"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:fontFamily="@font/montserrat_regular"
                android:background="@null"
                android:textColorHint="@color/black"
                android:singleLine="true"
                android:textColor="@color/black"
                android:hint="@string/confirm_pass"
                android:focusable="true"
                android:textCursorDrawable="@null"
                android:inputType="textPassword"
                android:textSize="@dimen/sp_16"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_confrmpass_visible"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_16"
                android:tint="@color/colorGrey"
                android:src="@drawable/eye_open"
                android:layout_weight=".2"/>

        </LinearLayout>



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_reg_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:text="@string/submit"
            android:fontFamily="@font/montserrat_bold"
            android:background="@drawable/round_corner_28_background"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_15"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_gravity="center"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center"
                android:text="@string/already_have_an_account"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center"
                android:text="@string/login"
                android:layout_marginStart="@dimen/dp_5"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
