    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.selectCountry.SelectCountryActivity">

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/orange_btn"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:ignore="MissingConstraints"
        tools:targetApi="lollipop" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/gradiant_back">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/login_logo" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/register"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_30" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_reg_fullname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44" android:layout_gravity="center|left"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:gravity="center|start"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:inputType="textCapWords|textPersonName"
            android:singleLine="true"
            android:fontFamily="@font/montserrat_regular"
            android:background="@drawable/round_corner_8_border"
            android:textColorHint="@color/black"
            android:hint="@string/full_name"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:gravity="center|start"
            android:background="@drawable/round_corner_8_border"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_country_code_reg"
                android:layout_width="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_reg_mobile_no"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_gravity="center|start"
                android:background="@null"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center|start"
                android:hint="@string/mobile_number"
                android:inputType="number"
                android:maxLength="10"
                android:paddingStart="@dimen/dp_5"
                android:paddingEnd="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_reg_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="center|start"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:gravity="center|start"
            android:fontFamily="@font/montserrat_regular"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:singleLine="true"
            android:textColor="@color/black"
            android:background="@drawable/round_corner_8_border"
            android:textColorHint="@color/black"
            android:hint="@string/email_id"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/sp_16"/>

