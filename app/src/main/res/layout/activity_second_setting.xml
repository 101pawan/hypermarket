<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Fragment.SecondSettingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradiant_back"
        android:gravity="center"
        android:padding="@dimen/_16sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_second_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_2"
            android:tint="@color/black"
            android:src="@drawable/back_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginEnd="12dp"
            android:orientation="vertical">



                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_second_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/setting"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20" />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_legal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_8"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_gravity="start"
            android:layout_weight=".1"
            android:src="@drawable/setting_legal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".9"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/legal"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="end"
            android:layout_weight=".1"
            android:src="@drawable/setting_right_arrow" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_my_term_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_8"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_gravity="start"
            android:layout_weight=".1"
            android:src="@drawable/setting_termsandcondition" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/terms_conditions"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="end"
            android:layout_weight=".1"
            android:src="@drawable/setting_right_arrow" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_neeed_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_5"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_gravity="start"
            android:layout_weight=".1"
            android:src="@drawable/setting_needhelp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/need_help"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="end"
            android:layout_weight=".1"
            android:src="@drawable/setting_right_arrow" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_5"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_gravity="start"
            android:layout_weight=".1"
            android:src="@drawable/setting_feedback" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/feedback_to_company"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="end"
            android:layout_weight=".1"
            android:src="@drawable/setting_right_arrow" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_5"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_gravity="start"
            android:layout_weight=".1"
            android:src="@drawable/setting_changepassword" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/change_pass"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="end"
            android:layout_weight=".1"
            android:src="@drawable/setting_right_arrow" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_5"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_gravity="start"
            android:layout_weight=".1"
            android:src="@drawable/setting_notification" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/notification"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="end"
            android:layout_weight=".1"
             />


    </LinearLayout>

</LinearLayout>