<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/gradiant_back">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_back_change"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_17"
            android:src="@drawable/back_icon"
            android:tint="@color/black"
            android:layout_marginStart="@dimen/dp_16" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_pass"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="@dimen/sp_14"
            android:layout_marginStart="@dimen/dp_12"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center|start"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:weightSum="1"
        android:background="@drawable/gray_boarder_shape">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_current_pass"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_44"
            android:gravity="center|start"
            android:layout_weight=".8"
            android:cursorVisible="true"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:fontFamily="@font/montserrat_regular"
            android:background="@null"
            android:textColorHint="@color/search_box_text_color"
            android:textColor="@color/search_box_text_color"
            android:hint="@string/current_password"
            android:focusable="true"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:textSize="@dimen/sp_16"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center|start"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:weightSum="1"
        android:background="@drawable/gray_boarder_shape">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_new_pass"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_44"
            android:gravity="center|start"
            android:layout_weight=".8"
            android:cursorVisible="true"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:fontFamily="@font/montserrat_regular"
            android:background="@null"
            android:textColorHint="@color/search_box_text_color"
            android:textColor="@color/search_box_text_color"
            android:hint="@string/new_password"
            android:focusable="true"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:textSize="@dimen/sp_16"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center|start"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:weightSum="1"
        android:background="@drawable/gray_boarder_shape">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_confirm_pass"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_44"
            android:gravity="center|start"
            android:layout_weight=".8"
            android:cursorVisible="true"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:fontFamily="@font/montserrat_regular"
            android:background="@null"
            android:textColorHint="@color/search_box_text_color"
            android:textColor="@color/search_box_text_color"
            android:hint="@string/re_enter_new_password"
            android:focusable="true"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:textSize="@dimen/sp_16"/>


    </LinearLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_chnage_password_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_47"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:text="@string/change_pass"
        android:fontFamily="@font/montserrat_bold"
        android:backgroundTint="@color/orange_btn"
        android:background="@drawable/round_corner_28_background"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />



</LinearLayout>